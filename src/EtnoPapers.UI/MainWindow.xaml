<Window x:Class="EtnoPapers.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EtnoPapers.UI"
        xmlns:converters="clr-namespace:EtnoPapers.UI.Converters"
        mc:Ignorable="d"
        Title="EtnoPapers - Ethnobotanical Research Manager"
        Height="800" Width="1200"
        Background="{StaticResource Background}"
        Foreground="{StaticResource Text}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="{StaticResource Surface}" Padding="8">
            <MenuItem Header="Arquivo">
                <MenuItem Header="Sair" Click="OnMenuExit"/>
            </MenuItem>
            <MenuItem Header="Editar">
                <MenuItem Header="Configurações" Click="OnMenuSettings"/>
            </MenuItem>
            <MenuItem Header="Ajuda">
                <MenuItem Header="Sobre" Click="OnMenuAbout"/>
            </MenuItem>
        </Menu>

        <!-- Navigation Panel -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Width="200" HorizontalAlignment="Left"
                Background="{StaticResource Surface}"
                BorderBrush="{StaticResource Border}"
                BorderThickness="0,0,1,0">
            <StackPanel Margin="0,60,0,0">
                <Button Content="Início"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="8"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Home"
                        Background="Transparent"
                        Foreground="{StaticResource TextPrimary}"/>
                <Button Content="Upload PDF"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="8"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Upload"
                        Background="Transparent"
                        Foreground="{StaticResource TextPrimary}"/>
                <Button Content="Registros"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="8"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Records"
                        Background="Transparent"
                        Foreground="{StaticResource TextPrimary}"/>
                <Button Content="Sincronização"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="8"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Sync"
                        Background="Transparent"
                        Foreground="{StaticResource TextPrimary}"/>
                <Button Content="Configurações"
                        Style="{StaticResource DefaultButtonStyle}"
                        Margin="8"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Settings"
                        Background="Transparent"
                        Foreground="{StaticResource TextPrimary}"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Frame Grid.Row="1" x:Name="MainFrame"
               Margin="200,0,0,0"
               NavigationUIVisibility="Hidden"
               Background="{StaticResource Background}"/>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource Surface}"
                BorderBrush="{StaticResource Border}"
                BorderThickness="0,1,0,0"
                Padding="8"
                Height="40">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- OLLAMA Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12"
                             Fill="{Binding OllamaConnected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Connected, Mode=OneWay}"
                             Margin="0,0,8,0"/>
                    <TextBlock Text="OLLAMA:" Margin="0,0,4,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding OllamaConnected, StringFormat={}{0:Conectado;Desconectado}}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- MongoDB Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Ellipse Width="12" Height="12"
                             Fill="{Binding MongodbConnected, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Connected, Mode=OneWay}"
                             Margin="0,0,8,0"/>
                    <TextBlock Text="MongoDB:" Margin="0,0,4,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding MongodbConnected, StringFormat={}{0:Conectado;Desconectado}}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Version Info -->
                <TextBlock Grid.Column="3"
                           Text="{Binding Version, StringFormat=v{0}}"
                           VerticalAlignment="Center"
                           Foreground="{StaticResource TextSecondary}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
