<Window x:Class="EtnoPapers.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EtnoPapers - Gerenciador de Pesquisa Etnobotânica"
        Height="750" Width="1100"
        Background="White"
        Foreground="Black"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#F3F3F3">
            <MenuItem Header="Arquivo">
                <MenuItem Header="Sair" Click="OnMenuExit"/>
            </MenuItem>
            <MenuItem Header="Editar">
                <MenuItem Header="Configurações" Click="OnMenuSettings"/>
            </MenuItem>
            <MenuItem Header="Ajuda">
                <MenuItem Header="Sobre" Click="OnMenuAbout"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area with Navigation -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#F3F3F3" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    <Button x:Name="BtnHome" Content="Início" Margin="8" Padding="12,10" Background="Transparent" Command="{Binding NavigateCommand}" CommandParameter="Home" Click="OnNavigationButtonClick"/>
                    <Button x:Name="BtnUpload" Content="Upload PDF" Margin="8" Padding="12,10" Background="Transparent" Command="{Binding NavigateCommand}" CommandParameter="Upload" Click="OnNavigationButtonClick"/>
                    <Button x:Name="BtnRecords" Content="Registros" Margin="8" Padding="12,10" Background="Transparent" Command="{Binding NavigateCommand}" CommandParameter="Records" Click="OnNavigationButtonClick"/>
                    <Button x:Name="BtnSync" Content="Sincronização" Margin="8" Padding="12,10" Background="Transparent" Command="{Binding NavigateCommand}" CommandParameter="Sync" Click="OnNavigationButtonClick"/>
                    <Button x:Name="BtnSettings" Content="Configurações" Margin="8" Padding="12,10" Background="Transparent" Command="{Binding NavigateCommand}" CommandParameter="Settings" Click="OnNavigationButtonClick"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Frame Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="White"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F3F3F3" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="8" Height="45">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- OLLAMA Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="Green" Margin="0,0,8,0"/>
                    <TextBlock Text="OLLAMA:" Margin="0,0,4,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding OllamaConnected, StringFormat={}{0:Conectado;Desconectado}}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- MongoDB Status -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Ellipse Width="12" Height="12" Fill="Green" Margin="0,0,8,0"/>
                    <TextBlock Text="MongoDB:" Margin="0,0,4,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text="{Binding MongodbConnected, StringFormat={}{0:Conectado;Desconectado}}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Version Info -->
                <TextBlock Grid.Column="3" Text="{Binding Version, StringFormat=v{0}}" VerticalAlignment="Center" Foreground="#505050"/>
            </Grid>
        </Border>
    </Grid>
</Window>
