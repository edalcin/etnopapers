<Window x:Class="EtnoPapers.UI.Views.EditRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:EtnoPapers.UI.Converters"
        mc:Ignorable="d"
        Title="Editar Registro"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource Background}"
        Foreground="{StaticResource Text}"
        Width="1200"
        Height="700"
        MinWidth="800"
        MinHeight="500"
        ResizeMode="CanResize">

    <Window.Resources>
        <converters:ListToStringConverter x:Key="ListToStringConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Extraction Time -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Editar Registro"
                       Style="{StaticResource Heading2}"/>

            <StackPanel Grid.Column="1"
                       Orientation="Horizontal"
                       VerticalAlignment="Center">
                <TextBlock Text="Tempo de extração: "
                          Style="{StaticResource Caption}"
                          Margin="0,0,4,0"/>
                <TextBlock x:Name="ExtractionTimeTextBlock"
                          Style="{StaticResource Caption}"
                          Foreground="{StaticResource Primary}"/>
            </StackPanel>
        </Grid>

        <!-- Form Content (Two Column Layout for Landscape) -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <!-- Title -->
                    <TextBlock Text="Título" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="TituloTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Authors -->
                    <TextBlock Text="Autores (um por linha)" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="AutoresTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             Height="70"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Year -->
                    <TextBlock Text="Ano" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="AnoTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Country -->
                    <TextBlock Text="País" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="PaisTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- State -->
                    <TextBlock Text="Estado" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="EstadoTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- City -->
                    <TextBlock Text="Município" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="MunicipioTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Local -->
                    <TextBlock Text="Local" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="LocalTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Biome -->
                    <TextBlock Text="Bioma" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="BiomaTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1">
                    <!-- Abstract -->
                    <TextBlock Text="Resumo" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="ResumoTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             Height="100"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Methodology -->
                    <TextBlock Text="Metodologia" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="MetodologiaTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             Height="70"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Community -->
                    <TextBlock Text="Comunidade (Nome)" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="ComunidadeNomeTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <TextBlock Text="Comunidade (Povo)" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="ComunidadePovoTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <TextBlock Text="Comunidade (Localização)" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBox x:Name="ComunidadeLocalizacaoTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,12"
                             Padding="8,6"/>

                    <!-- Plant Species -->
                    <TextBlock Text="Espécies (JSON)" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                    <TextBlock Text="Formato: [{&quot;nome_vernacular&quot;:[...], &quot;nome_cientifico&quot;:[...], &quot;tipo_uso&quot;:&quot;...&quot;}]"
                               Style="{StaticResource Caption}"
                               FontSize="10"
                               Foreground="#8A8A8A"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="EspeciesTextBox"
                             Style="{StaticResource {x:Type TextBox}}"
                             Height="90"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,12"
                             Padding="8,6"
                             FontFamily="Consolas"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancelar"
                    Style="{StaticResource DefaultButtonStyle}"
                    Padding="16,8"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    Background="Transparent"
                    Foreground="{StaticResource Primary}"/>

            <Button Content="Salvar"
                    Style="{StaticResource DefaultButtonStyle}"
                    Padding="16,8"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
