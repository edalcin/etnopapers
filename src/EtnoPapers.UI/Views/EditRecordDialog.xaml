<Window x:Class="EtnoPapers.UI.Views.EditRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:EtnoPapers.UI.Converters"
        mc:Ignorable="d"
        Title="Editar Registro"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource Background}"
        Foreground="{StaticResource Text}"
        Width="700"
        Height="800"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:ListToStringConverter x:Key="ListToStringConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Editar Registro"
                   Style="{StaticResource Heading2}"
                   Margin="0,0,0,16"/>

        <!-- Form Content (ScrollViewer for long content) -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Título" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="TituloTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Margin="0,0,0,16"
                         Padding="8,6"/>

                <!-- Authors -->
                <TextBlock Text="Autores (um por linha)" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="AutoresTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Height="80"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"
                         Padding="8,6"/>

                <!-- Year -->
                <TextBlock Text="Ano" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="AnoTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Margin="0,0,0,16"
                         Padding="8,6"
                         Width="100"
                         HorizontalAlignment="Left"/>

                <!-- Country -->
                <TextBlock Text="País" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="PaisTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Margin="0,0,0,16"
                         Padding="8,6"/>

                <!-- State -->
                <TextBlock Text="Estado" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="EstadoTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Margin="0,0,0,16"
                         Padding="8,6"/>

                <!-- City -->
                <TextBlock Text="Município" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="MunicipioTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Margin="0,0,0,16"
                         Padding="8,6"/>

                <!-- Biome -->
                <TextBlock Text="Bioma" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="BiomaTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Margin="0,0,0,16"
                         Padding="8,6"/>

                <!-- Abstract -->
                <TextBlock Text="Resumo" Style="{StaticResource Caption}" Margin="0,0,0,4"/>
                <TextBox x:Name="ResumoTextBox"
                         Style="{StaticResource {x:Type TextBox}}"
                         Height="120"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,16"
                         Padding="8,6"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancelar"
                    Style="{StaticResource DefaultButtonStyle}"
                    Padding="16,8"
                    Margin="0,0,8,0"
                    IsCancel="True"
                    Background="Transparent"
                    Foreground="{StaticResource Primary}"/>

            <Button Content="Salvar"
                    Style="{StaticResource DefaultButtonStyle}"
                    Padding="16,8"
                    IsDefault="True"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
