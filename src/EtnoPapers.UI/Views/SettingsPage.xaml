<Page x:Class="EtnoPapers.UI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Foreground="Black">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="ConfiguraÃ§Ãµes" FontSize="28" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,8"/>
                <TextBlock Text="Configure a integraÃ§Ã£o com IA em nuvem, MongoDB e preferÃªncias da aplicaÃ§Ã£o" FontSize="14" Foreground="#505050" TextWrapping="Wrap"/>
            </StackPanel>

<!-- Cloud AI Provider Settings -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ConfiguraÃ§Ã£o do Provedor de IA" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Provedor de IA" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                            <ComboBox x:Name="ProviderComboBox"
                                      SelectedIndex="{Binding SelectedProviderIndex, UpdateSourceTrigger=PropertyChanged}"
                                      Padding="8,6"
                                      Background="White"
                                      BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="Google Gemini" Tag="0"/>
                                <ComboBoxItem Content="OpenAI" Tag="1"/>
                                <ComboBoxItem Content="Anthropic Claude" Tag="2"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Gemini Model Selection (visible only when Gemini is selected) -->
                        <StackPanel Grid.Column="1" Margin="12,0,0,0" Visibility="{Binding SelectedProviderIndex, Converter={StaticResource IntToVisibilityConverter}}">
                            <TextBlock Text="Modelo Gemini" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                            <ComboBox SelectedIndex="{Binding SelectedGeminiModelIndex, UpdateSourceTrigger=PropertyChanged}"
                                      Padding="8,6"
                                      Background="White"
                                      BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="Gemini 1.5 Flash (Recomendado)" Tag="0"/>
                                <ComboBoxItem Content="Gemini Pro (Mais Potente)" Tag="1"/>
                            </ComboBox>
                            <TextBlock Text="Flash: mais rÃ¡pido | Pro: melhor precisÃ£o"
                                       FontSize="10" Foreground="#8A8A8A" Margin="0,4,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Margin="12,0,0,0" VerticalAlignment="Bottom">
                            <TextBlock FontSize="11" Foreground="#0078D4" VerticalAlignment="Center">
                                <Hyperlink NavigateUri="https://ai.google.dev/" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Obter Chave Gemini"/>
                                </Hyperlink>
                                <LineBreak/>
                                <Hyperlink NavigateUri="https://platform.openai.com/" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Obter Chave OpenAI"/>
                                </Hyperlink>
                                <LineBreak/>
                                <Hyperlink NavigateUri="https://console.anthropic.com/" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Obter Chave Anthropic"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Chave de API" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="ApiKeyPasswordBox"
                                 PasswordChanged="ApiKeyPasswordBox_PasswordChanged"
                                 Padding="8,6"
                                 Margin="0,0,0,4"
                                 Background="White"
                                 BorderBrush="#E0E0E0"/>

                    <TextBlock Text="{Binding MaskedApiKey}"
                               FontSize="11"
                               Foreground="#8A8A8A"
                               Margin="0,0,0,12"
                               Visibility="{Binding MaskedApiKey, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <TextBlock Text="â„¹ A chave de API serÃ¡ armazenada de forma criptografada usando Windows DPAPI"
                               FontSize="11"
                               Foreground="#8A8A8A"
                               Margin="0,0,0,12"/>

                    <Button Content="ðŸ”— Testar ConexÃ£o e Validar API Key"
                            Command="{Binding TestProviderConnectionCommand}"
                            Padding="16,8"
                            Background="#4CAF50"
                            Foreground="White"
                            Margin="0,0,0,12"
                            ToolTip="Testa a conexÃ£o com o provedor de IA e valida sua chave de API"/>

                    <TextBlock Text="{Binding ProviderTestStatus}"
                               FontSize="12"
                               Foreground="#505050"
                               TextWrapping="Wrap"
                               Visibility="{Binding ProviderTestStatus, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Custom Extraction Prompt -->
                    <TextBlock Text="Prompt Customizado para ExtraÃ§Ã£o" FontSize="12" Foreground="#505050" Margin="0,16,0,4"/>
                    <TextBlock Text="Deixe em branco para usar o prompt padrÃ£o do sistema" FontSize="11" Foreground="#8A8A8A" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding CustomExtractionPrompt, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8,6"
                             Margin="0,0,0,12"
                             Background="White"
                             BorderBrush="#E0E0E0"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="150"/>

                    <TextBlock Text="â„¹ Customize o prompt enviado para a IA. Use {{texto}} como placeholder para o conteÃºdo do PDF."
                               FontSize="11"
                               Foreground="#8A8A8A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                </StackPanel>
            </Border>

            <!-- MongoDB Settings -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="ConfiguraÃ§Ã£o MongoDB" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <TextBlock Text="URI de ConexÃ£o" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding MongodbUri, UpdateSourceTrigger=PropertyChanged}" Padding="8,6" Margin="0,0,0,12" Background="White" BorderBrush="#E0E0E0"/>

                    <TextBlock Text="(Deixe em branco para desabilitar sincronizaÃ§Ã£o remota)" FontSize="11" Foreground="#8A8A8A" Margin="0,0,0,12"/>

                    <Button Content="Testar ConexÃ£o" Command="{Binding TestMongodbCommand}" Padding="16,8" Background="#0078D4" Foreground="White" Margin="0,0,0,12"/>

                    <TextBlock Text="{Binding MongodbTestStatus}" FontSize="12" Foreground="#505050" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Application Preferences -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="PreferÃªncias da AplicaÃ§Ã£o" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <CheckBox Content="Verificar atualizaÃ§Ãµes automaticamente" Margin="0,0,0,12" IsChecked="True"/>
                    <CheckBox Content="Mostrar notificaÃ§Ãµes de sincronizaÃ§Ã£o" Margin="0,0,0,12" IsChecked="True"/>
                    <CheckBox Content="Lembrar senha do MongoDB" Margin="0,0,0,20" IsChecked="False"/>

                    <Button Content="Salvar ConfiguraÃ§Ãµes" Command="{Binding SaveSettingsCommand}" Padding="16,8" Background="#0078D4" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Success/Error Messages -->
            <Border Background="#E8F5E9" Padding="16" CornerRadius="4" Margin="0,0,0,0" Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âœ“" FontSize="16" Foreground="#4CAF50" FontWeight="Bold" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding SuccessMessage}" FontSize="13" Foreground="#2E7D32" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="#FFEBEE" Padding="16" CornerRadius="4" Margin="0,8,0,0" Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âœ—" FontSize="16" Foreground="#F44336" FontWeight="Bold" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding ErrorMessage}" FontSize="13" Foreground="#C62828" VerticalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</Page>
