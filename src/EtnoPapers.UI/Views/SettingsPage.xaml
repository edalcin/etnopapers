<Page x:Class="EtnoPapers.UI.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Foreground="Black">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Configura√ß√µes" FontSize="28" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,8"/>
                <TextBlock Text="Configure a integra√ß√£o com IA em nuvem, MongoDB e prefer√™ncias da aplica√ß√£o" FontSize="14" Foreground="#505050" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Migration Banner (shows when legacy OLLAMA config detected) -->
            <Border Background="#FFF4CE"
                    BorderBrush="#F0C419"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,20"
                    Visibility="{Binding ShowMigrationBanner, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <TextBlock Grid.Column="0"
                               Text="‚ö†"
                               FontSize="24"
                               VerticalAlignment="Top"
                               Margin="0,0,12,0"
                               Foreground="#D68910"/>

                    <!-- Message -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Migra√ß√£o para Provedores de IA em Nuvem"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#333333"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#333333"
                                   Margin="0,0,0,8">
                            Voc√™ estava usando OLLAMA localmente. Agora voc√™ pode usar provedores de IA em nuvem (Gemini, OpenAI, Anthropic) para melhor desempenho e qualidade.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="11"
                                   Foreground="#666666">
                            ‚Ä¢ 50% mais r√°pido que OLLAMA local<LineBreak/>
                            ‚Ä¢ Melhor precis√£o e menos alucina√ß√µes<LineBreak/>
                            ‚Ä¢ N√£o requer instala√ß√£o de software adicional ou GPU
                        </TextBlock>
                    </StackPanel>

                    <!-- Close button -->
                    <Button Grid.Column="2"
                            Content="‚úï"
                            Command="{Binding DismissMigrationBannerCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Foreground="#666666"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            ToolTip="Fechar este aviso"/>
                </Grid>
            </Border>

            <!-- Cloud AI Provider Settings -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Configura√ß√£o do Provedor de IA" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Provedor de IA" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                            <ComboBox x:Name="ProviderComboBox"
                                      SelectedIndex="{Binding SelectedProviderIndex, UpdateSourceTrigger=PropertyChanged}"
                                      Padding="8,6"
                                      Background="White"
                                      BorderBrush="#E0E0E0">
                                <ComboBoxItem Content="Google Gemini" Tag="0"/>
                                <ComboBoxItem Content="OpenAI" Tag="1"/>
                                <ComboBoxItem Content="Anthropic Claude" Tag="2"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Bottom">
                            <TextBlock FontSize="11" Foreground="#0078D4" VerticalAlignment="Center">
                                <Hyperlink NavigateUri="https://ai.google.dev/" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Obter Chave Gemini"/>
                                </Hyperlink>
                                <LineBreak/>
                                <Hyperlink NavigateUri="https://platform.openai.com/" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Obter Chave OpenAI"/>
                                </Hyperlink>
                                <LineBreak/>
                                <Hyperlink NavigateUri="https://console.anthropic.com/" RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="Obter Chave Anthropic"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Chave de API" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="ApiKeyPasswordBox"
                                 PasswordChanged="ApiKeyPasswordBox_PasswordChanged"
                                 Padding="8,6"
                                 Margin="0,0,0,4"
                                 Background="White"
                                 BorderBrush="#E0E0E0"/>

                    <TextBlock Text="{Binding MaskedApiKey}"
                               FontSize="11"
                               Foreground="#8A8A8A"
                               Margin="0,0,0,12"
                               Visibility="{Binding MaskedApiKey, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <TextBlock Text="‚Ñπ A chave de API ser√° armazenada de forma criptografada usando Windows DPAPI"
                               FontSize="11"
                               Foreground="#8A8A8A"
                               Margin="0,0,0,12"/>

                    <Button Content="üîó Testar Conex√£o e Validar API Key"
                            Command="{Binding TestProviderConnectionCommand}"
                            Padding="16,8"
                            Background="#4CAF50"
                            Foreground="White"
                            Margin="0,0,0,12"
                            ToolTip="Testa a conex√£o com o provedor de IA e valida sua chave de API"/>

                    <TextBlock Text="{Binding ProviderTestStatus}"
                               FontSize="12"
                               Foreground="#505050"
                               TextWrapping="Wrap"
                               Visibility="{Binding ProviderTestStatus, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Custom Extraction Prompt -->
                    <TextBlock Text="Prompt Customizado para Extra√ß√£o" FontSize="12" Foreground="#505050" Margin="0,16,0,4"/>
                    <TextBlock Text="Deixe em branco para usar o prompt padr√£o do sistema" FontSize="11" Foreground="#8A8A8A" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding CustomExtractionPrompt, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8,6"
                             Margin="0,0,0,12"
                             Background="White"
                             BorderBrush="#E0E0E0"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Height="150"/>

                    <TextBlock Text="‚Ñπ Customize o prompt enviado para a IA. Use {{texto}} como placeholder para o conte√∫do do PDF."
                               FontSize="11"
                               Foreground="#8A8A8A"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>
                </StackPanel>
            </Border>

            <!-- MongoDB Settings -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Configura√ß√£o MongoDB" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <TextBlock Text="URI de Conex√£o" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                    <TextBox Text="{Binding MongodbUri, UpdateSourceTrigger=PropertyChanged}" Padding="8,6" Margin="0,0,0,12" Background="White" BorderBrush="#E0E0E0"/>

                    <TextBlock Text="(Deixe em branco para desabilitar sincroniza√ß√£o remota)" FontSize="11" Foreground="#8A8A8A" Margin="0,0,0,12"/>

                    <Button Content="Testar Conex√£o" Command="{Binding TestMongodbCommand}" Padding="16,8" Background="#0078D4" Foreground="White" Margin="0,0,0,12"/>

                    <TextBlock Text="{Binding MongodbTestStatus}" FontSize="12" Foreground="#505050" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Application Preferences -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Prefer√™ncias da Aplica√ß√£o" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <CheckBox Content="Verificar atualiza√ß√µes automaticamente" Margin="0,0,0,12" IsChecked="True"/>
                    <CheckBox Content="Mostrar notifica√ß√µes de sincroniza√ß√£o" Margin="0,0,0,12" IsChecked="True"/>
                    <CheckBox Content="Lembrar senha do MongoDB" Margin="0,0,0,20" IsChecked="False"/>

                    <Button Content="Salvar Configura√ß√µes" Command="{Binding SaveSettingsCommand}" Padding="16,8" Background="#0078D4" Foreground="White"/>
                </StackPanel>
            </Border>

            <!-- Success/Error Messages -->
            <Border Background="#E8F5E9" Padding="16" CornerRadius="4" Margin="0,0,0,0" Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="‚úì" FontSize="16" Foreground="#4CAF50" FontWeight="Bold" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding SuccessMessage}" FontSize="13" Foreground="#2E7D32" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Background="#FFEBEE" Padding="16" CornerRadius="4" Margin="0,8,0,0" Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="‚úó" FontSize="16" Foreground="#F44336" FontWeight="Bold" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding ErrorMessage}" FontSize="13" Foreground="#C62828" VerticalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</Page>
