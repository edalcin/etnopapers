<Page x:Class="EtnoPapers.UI.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White"
      Foreground="Black">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <!-- Welcome Section with Logo -->
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Grid.Column="0" Source="Assets/etnopapers.png" Width="120" Height="120" Margin="0,0,30,0" VerticalAlignment="Top"/>

                <!-- Welcome Text -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Bem-vindo ao EtnoPapers" FontSize="28" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,8"/>
                    <TextBlock Text="Extração Automatizada de Dados e Metadados Etnobotânicos" FontSize="16" Foreground="#505050" Margin="0,0,0,16"/>
                    <TextBlock Text="{Binding WelcomeMessage}" FontSize="14" TextWrapping="Wrap" Foreground="#505050"/>
                </StackPanel>
            </Grid>

            <!-- Quick Stats -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Estatísticas" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Records Count -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Registros Locais" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding RecordCount}" FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
                        </StackPanel>

                        <!-- Version -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Versão da Aplicação" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ApplicationVersion}" FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Getting Started -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Comece por aqui" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="1. " FontWeight="Bold"/>
                        <Run Text="Configure Provedor de IA - " FontWeight="Bold"/>
                        <Run Text="Acesse Configurações e escolha um provedor de IA em nuvem (Gemini, OpenAI ou Anthropic) e insira sua chave de API"/>
                    </TextBlock>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="2. " FontWeight="Bold"/>
                        <Run Text="Configure MongoDB - " FontWeight="Bold"/>
                        <Run Text="Adicione uma string de conexão MongoDB se deseja sincronizar registros para a nuvem (opcional)"/>
                    </TextBlock>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="3. " FontWeight="Bold"/>
                        <Run Text="Faça upload de PDFs - " FontWeight="Bold"/>
                        <Run Text="Vá para a seção Upload PDF e selecione seus artigos de pesquisa"/>
                    </TextBlock>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="4. " FontWeight="Bold"/>
                        <Run Text="Revise e edite - " FontWeight="Bold"/>
                        <Run Text="Verifique os dados extraídos e faça ajustes conforme necessário"/>
                    </TextBlock>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="5. " FontWeight="Bold"/>
                        <Run Text="Sincronize - " FontWeight="Bold"/>
                        <Run Text="Sincronize seus registros com MongoDB para backup na nuvem (opcional)"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Resources and Support -->
            <Border Background="#F3F3F3" Padding="20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Recursos e Suporte" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        <Run Text="Para suporte e documentação, entre em contato: "/>
                        <Run Text="edalcin@jbrj.gov.br" FontWeight="Bold"/>
                    </TextBlock>

                    <TextBlock FontSize="13" TextWrapping="Wrap" Margin="0,0,0,12">
                        Pré-requisitos:
                    </TextBlock>

                    <TextBlock FontSize="12" Margin="0,4,0,0" Foreground="#505050">• .NET 8.0 Runtime</TextBlock>
                    <TextBlock FontSize="12" Margin="0,2,0,0" Foreground="#505050">• Chave de API de provedor de IA (Gemini, OpenAI ou Anthropic)</TextBlock>
                    <TextBlock FontSize="12" Margin="0,2,0,0" Foreground="#505050">• (Opcional) MongoDB Atlas ou instância local</TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>

</Page>
