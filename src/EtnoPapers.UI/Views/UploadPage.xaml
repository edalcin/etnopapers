                <StackPanel>
                    <!-- File Drop Zone -->
                    <TextBlock Text="Selecione um arquivo PDF" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>

                    <Border Background="White" BorderBrush="#E0E0E0" BorderThickness="2" CornerRadius="8" Padding="0" Margin="0,0,0,16" Height="120">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
