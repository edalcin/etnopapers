                            <TextBlock Text="Clique para selecionar ou arraste um PDF aqui" FontSize="13" TextAlignment="Center" Foreground="#505050"/>
                        </StackPanel>
                    </Border>

                    <!-- Selected File Display -->
                    <TextBlock Text="{Binding SelectedFilePath, StringFormat='Arquivo: {0}'}" FontSize="12" Foreground="#505050" Margin="0,0,0,12" TextWrapping="Wrap"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Button Content="Selecionar Arquivo" Command="{Binding SelectFileCommand}" Padding="16,8" Margin="0,0,8,0" Background="#0078D4" Foreground="White"/>
                        <Button Content="Iniciar ExtraÃ§Ã£o" Command="{Binding StartExtractionCommand}" Style="{StaticResource ActionButtonStyle}" Margin="0,0,0,0" Background="#0078D4"/>
                    </StackPanel>

                    <!-- Extraction Progress -->
                    <StackPanel Visibility="{Binding IsExtracting, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,0,12">
                        <TextBlock Text="{Binding CurrentStep}" FontSize="12" Foreground="#505050" Margin="0,0,0,4"/>
                        <ProgressBar Value="{Binding ExtractionProgress}" Height="8"/>
                        <TextBlock Text="{Binding ExtractionProgress, StringFormat='{}Progresso: {0}%'}" FontSize="11" Foreground="#8A8A8A" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Error Display -->
                    <TextBlock Text="{Binding ErrorMessage}" FontSize="12" Foreground="#D32F2F" TextWrapping="Wrap" Visibility="{Binding HasExtractionError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </StackPanel>
            </Border>

            <!-- Info Box -->
            <Border Background="#F3F3F3" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="16">
                <StackPanel>
