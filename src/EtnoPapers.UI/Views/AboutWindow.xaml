<Window x:Class="EtnoPapers.UI.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sobre EtnoPapers"
        Height="500" Width="500"
        Background="White"
        Foreground="Black"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid>
        <StackPanel Margin="40" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Logo -->
            <Image Source="Assets/etnopapers.png" Width="150" Height="150" Margin="0,0,0,30" HorizontalAlignment="Center"/>

            <!-- Title -->
            <TextBlock Text="EtnoPapers" FontSize="28" FontWeight="Bold" Foreground="#0078D4" TextAlignment="Center" Margin="0,0,0,8"/>

            <!-- Subtitle -->
            <TextBlock Text="Extração Automatizada de Dados e Metadados Etnobotânicos" FontSize="14" TextAlignment="Center" Foreground="#505050" Margin="0,0,0,20" TextWrapping="Wrap"/>

            <!-- Version -->
            <TextBlock Text="Versão 2.1.0" FontSize="12" TextAlignment="Center" Foreground="#505050" Margin="0,0,0,30"/>

            <!-- Description -->
            <TextBlock TextAlignment="Center" TextWrapping="Wrap" FontSize="12" Foreground="#505050" Margin="0,0,0,20">
                <Run Text="Aplicação Windows para extração e catalogação automatizada de metadados etnobotânicos de artigos científicos sobre o uso tradicional de plantas por comunidades indígenas e tradicionais."/>
            </TextBlock>

            <!-- Copyright -->
            <TextBlock Text="Copyright © 2024 EtnoPapers Contributors" FontSize="11" TextAlignment="Center" Foreground="#808080" Margin="0,0,0,8"/>

            <!-- Contact -->
            <TextBlock FontSize="11" TextAlignment="Center" Foreground="#505050" Margin="0,0,0,30">
                <Run Text="Contato: "/>
                <Run Text="edalcin@jbrj.gov.br" FontWeight="Bold"/>
            </TextBlock>

            <!-- Close Button -->
            <Button Content="Fechar" Width="120" Padding="10,8" Background="#0078D4" Foreground="White" Click="OnCloseClick" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
