{
  "name": "etnopapers",
  "version": "1.0.0",
  "description": "Windows desktop application for automated extraction and cataloging of ethnobotanical metadata from scientific papers",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm:dev:renderer\" \"pnpm:dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "esbuild src/main/index.ts --bundle --platform=node --target=node20 --external:electron --outfile=dist/main/index.cjs --watch",
    "build": "pnpm build:renderer && pnpm build:main && pnpm build:preload",
    "build:renderer": "vite build",
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --target=node20 --external:electron --outfile=dist/main/index.cjs",
    "build:preload": "esbuild src/main/preload/index.ts --bundle --platform=node --target=node20 --external:electron --outfile=dist/main/preload/index.js",
    "start": "electron dist/main/index.cjs",
    "start:dev": "concurrently \"pnpm:dev:renderer\" \"wait-on http://localhost:5173 && pnpm:start\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "ethnobotany",
    "metadata",
    "extraction",
    "pdf",
    "electron",
    "react"
  ],
  "author": "Eduardo Dalcin <edalcin@jbrj.gov.br>",
  "license": "MIT",
  "packageManager": "pnpm@10.16.1",
  "dependencies": {
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-store": "^9.0.0",
    "lowdb": "^7.0.1",
    "mongodb": "^7.0.0",
    "pdfjs-dist": "^5.4.449",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.28.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "28.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.14",
    "wait-on": "^9.0.3"
  }
}
